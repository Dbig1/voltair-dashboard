import React, { useEffect, useState } from "react";
import MetricsChart from "./MetricsChart";
import { streamText } from "ai";
import "dotenv/config";

const Dashboard = () => {
  const [aiText, setAiText] = useState("Generating AI insights...");

  useEffect(() => {
    const fetchAI = async () => {
      const result = streamText({
        model: "openai/gpt-5",
        prompt: "Write 3 key insights for VoltAir Premium Dashboard in 50 words.",
      });

      let text = "";
      for await (const part of result.textStream) {
        text += part;
        setAiText(text);
      }
    };

    fetchAI().catch(console.error);
  }, []);

  return (
    <div className="p-6 min-h-screen">
      <h1 className="text-3xl font-bold mb-4 text-yellow-400">
        VoltAir Premium Dashboard
      </h1>

      <MetricsChart />

      <div className="bg-yellow-600 bg-opacity-20 p-4 rounded-lg">
        <h2 className="text-xl font-semibold mb-2">AI Insights</h2>
        <p>{aiText}</p>
      </div>
    </div>
  );
};

export default Dashboard;
